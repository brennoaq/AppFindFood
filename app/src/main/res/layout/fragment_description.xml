<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_mcdonalds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/im_description"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:paddingStart="10dp"
                app:srcCompat="@mipmap/ic_mcdonalds_foreground">

            </ImageView>

            <TextView
                android:id="@+id/tv_descriptionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="descriptionMcdonalds"
                android:text="Mc Donald`s"
                android:textColor="#FFC72C"
                android:textSize="30dp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição:"
                android:textSize="32dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="textotextotextotextotextotextotextotextotextotextotextotextotextotextotextotextotextotextotextotextotextotextotextotextotextotextotextotexto"
                android:textSize="20dp"
                android:layout_marginBottom="80dp">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Localização:"
                android:textSize="32dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp">

            </TextView>


            <ImageView
                android:id="@+id/maps"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_map"
                android:layout_gravity="right"
                android:layout_marginRight="20dp">

            </ImageView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>